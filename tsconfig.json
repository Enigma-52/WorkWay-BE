{
  "compilerOptions": {
    "outDir": "./dist",        // Set the output directory to 'dist'
    "rootDir": "./src",        // Set the root directory for TypeScript source files
    "esModuleInterop": true,
    "module": "commonjs",      // CommonJS is generally used for Node.js
    "target": "ES2020",           // Specify the target ECMAScript version
    "strict": true,            // Enable all strict type-checking options
    "skipLibCheck": true       // Skip type checking of declaration files (faster builds)
  },
  "include": ["src/**/*.ts"],  // Include all TypeScript files in 'src'
  "exclude": ["node_modules"]  // Exclude node_modules
}
